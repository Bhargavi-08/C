#include<stdio.h>
void main()
{
    int a[10],n,i,max,min;
    float avg;
    printf("enter array size:");
    scanf("%d",&n);
    printf("enter the array elements:");
    for(i=0;i<n;++i)
    {
        scanf("%d",&a[i]);
        
    }
    max=a[0];
    min=a[0];
    for(i=0;i<n;++i)
    {
        if(a[i]>max)
        max=a[i];
        if(a[i]<min)
        {
            min=a[i];
        }
    }
   printf("The maximum element is %d\n",max);
   printf("The minimum element is %d",min);
}
    
